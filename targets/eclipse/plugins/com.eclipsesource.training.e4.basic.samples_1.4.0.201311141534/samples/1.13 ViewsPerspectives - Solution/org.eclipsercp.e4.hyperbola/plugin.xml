<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.e4.ui.workbench.swt.E4Application"
            name="Hyperbola">
         <property
               name="appName"
               value="Hyperbola">
         </property>
         <property
               name="applicationXMI"
               value="org.eclipsercp.e4.hyperbola/Application.e4xmi">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.eclipsercp.e4.hyperbola.isContact">
         <with variable="org.eclipse.ui.selection">
            <instanceof
                  value="org.eclipsercp.e4.hyperbola.model.Contact">
            </instanceof>
      </with>
      </definition>
   </extension>
   <extension
         id="id1"
         point="org.eclipse.e4.workbench.model">
      <processor
            beforefragment="true"
            class="org.eclipsercp.e4.hyperbola.ShowViews">
      </processor>
      <processor
            beforefragment="true"
            class="org.eclipsercp.e4.hyperbola.ShowPerspectives">
      </processor>
   </extension>

</plugin>
